// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id @default(uuid())
  username String
  email String  @unique
  password String
}

model Price {
  id        Int      @id @default(autoincrement())
  productType    ProductType    @relation(fields: [productTypeId], references: [id])
  productTypeId Int
  date DateTime @default(dbgenerated("NOW()"))
  value Int
}

model Product {
  id        Int      @id @default(autoincrement())
  name String
  productType    ProductType    @relation(fields: [productTypeId], references: [id])
  productTypeId Int
  amount Int @default(1)
  price Int
  purchases ProductsOfPurchases[]
}

model ProductType {
  id        Int      @id @default(autoincrement())
  name String @unique
  prices Price[]
  product Product[]
}

model Purchase {
  id        Int      @id @default(autoincrement())
  date DateTime?
  value Int?
  status String @default("finished")
  products ProductsOfPurchases[]
}

model ProductsOfPurchases {
  product       Product     @relation(fields: [productId], references: [id])
  productId     Int // relation scalar field (used in the `@relation` attribute above)
  purchase   Purchase @relation(fields: [purchaseId], references: [id])
  purchaseId Int // relation scalar field (used in the `@relation` attribute above)

  @@id([productId, purchaseId])
}
